<h1 class="text-center">My restaurant</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1">
      <div class="card">
        <p><%= "Name : #{@restaurant.name}" %></p>
        <p><%= "Restaurant: #{@restaurant.address}" %></p>
        <p><%= "Phone Number: #{@restaurant.phone_number}" %></p>
        <p><%= "Category: #{@restaurant.category}" %></p>
        <ul>
          <% if @reviews != nil %>
            <% @reviews.each do |review| %>
             <li><%= "#{review.rating}/5: #{review.content}"%></li>
            <% end %>
          <% end %>
        </ul>
        <div class="button-white text-center">
          <%= link_to "Add Review", new_restaurant_review_path(@restaurant)  %>
        </div>
        <div class="card-img">
          <div class="card-img-content text-center">
            insert cool pic here
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="text-center blue-title">
  <%= link_to "Back to Restaurants", restaurants_path %>
</div>
