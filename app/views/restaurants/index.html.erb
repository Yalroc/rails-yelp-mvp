<% @restaurants.each do |restaurant| %>
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-10 col-md-offset-1">
        <div class="card">
            <p><%= "Name : #{restaurant.name}" %></p>
            <p><%= "Restaurant: #{restaurant.address}" %></p>
            <p><%= "Phone Number: #{restaurant.phone_number}" %></p>
            <p><%= "Category: #{restaurant.category}" %></p>
            <div class="text-center button-white">
              <%= link_to "View Reviews", restaurant_path(restaurant) %>
            </div>
            <div class="card-img">
              <div class="card-img-content text-center">
               insert cool pic here
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

