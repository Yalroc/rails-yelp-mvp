<h1 class="text-center">Add Review</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div>
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <div>
            <%= f.input :rating %>
          </div>
          <div>
            <%= f.input :content %>
          </div>
          <div class="col-xs-4 col-xs-offset-4 col-sm-2 col-sm-offset-5">
            <%= f.submit "add a review", class: "btn-primary submit-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="text-center blue-title">
  <%= link_to "Back to Restaurants", restaurants_path %>
</div>


